<style>
    .format {
        margin-left: 230px;
    }

    .size {
        font-size: 0.875em;
    }

    .align {
        margin-left: 400px;
    }
</style>

<div class="format">
    <div class="col-md-12 col-lg-8">

        {{!-- <h1><b>{{TenLoaiCon}}</b></h1> --}}
        <div class="row">
            <div class="col-sm-6">
                <br><br>
                {{#each this.tags}}
                <div class="card mb-3" style="width: 850px">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{AnhDaiDien}}" class="card-img" alt="anhdaidien"
                                style="width: 270px; height: 270px">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="post-content">
                                    <a href="/products/{{ChuyenMucConID}}/{{ProID}}" class="font-weight-bold" title="View details">
                                        <h4>{{TieuDe}}</h4>
                                    </a>
                                </div>
                                <p class="post-date">Ngày {{day}}/{{month}}/{{year}}</p>
                                <p class="post-excerpt">{{TenLoaiCon}}</p>
                                <p class="size">
                                    {{NDTomTat}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                <!-- oflow-hidden -->
                <div class="align">
                    <div class="col-sm-12">
                        <nav aria-label="Page navigation">
                            <ol class="nikki-pager">
           
            <li class="{{#unless go_pre_P}} disabled{{/unless}}">
            <a href="?page={{pre_P}}"><i class="fa fa-long-arrow-left " aria-hidden="true"></i> Trước</a></li>
             {{#each this.page_numbers}}
            {{#if active}}
            <li class="page-item active" aria-current="page">
                <span class="page-link">
                    {{value}}
                    <span class="sr-only">(current)</span>
                </span>
            </li>
            {{else}}
            <li><a href="?page={{value}}">{{value}}<i class="fa fa-long-arrow-center" aria-hidden="true"></i></a></li>
            {{/if}}
             {{/each}}
            <li class="{{#unless go_next_P}} disabled{{/unless}}"><a href="?page={{next_P}}">Sau <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
           
        </ol>
                            <br><br><br>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- col-sm-6 -->
        </div>

    </div>
</div>