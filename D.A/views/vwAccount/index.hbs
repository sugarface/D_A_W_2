<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="card shadow mt-5 mb-5">
                <div class="card-header text-center font-weight-bold">
                    TRANG QUẢN TRỊ VIÊN
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center"><a href="/admin/adminControl"><i class="fa fa-snowflake-o"
                                aria-hidden="true"></i> Trang Administrator</a></li>
                    <li class="list-group-item text-center"><a href="/products/postmanage"><i class="fa fa-file-text"
                                aria-hidden="true"></i> Xem tất cả bài viết</a></li>
                    <li class="list-group-item text-center"><a href="/account"><i class="fa fa-users"
                                aria-hidden="true"></i> Quản lý người dùng</a></li>
                    <li class="list-group-item text-center"><a href="/categories"><i class="fa fa-folder-open-o"
                                aria-hidden="true"></i> Quản lý danh mục</a></li>
                    <li class="list-group-item text-center"><a href="/tag"><i class="fa fa-folder-open-o"
                                aria-hidden="true"></i> Quản lý tag</a></li>
                    <li class="list-group-item text-center"><a href="/subscriber"><i class="fa fa-folder-open-o"
                                aria-hidden="true"></i> Gia hạn độc giả</a></li>
                    <li class="list-group-item text-center"><a class="" href="/products/uppost"><i class="fa fa-plus"
                                aria-hidden="true"></i> Thêm bài viết</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="card shadow mt-5 mb-5">
                <div class="card-header">
                    <div class="row">
                        <div class="panel col-sm-9"> QUẢN LÝ NGƯỜI DÙNG</div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID </th>
                            <th scope="col">Người Dùng</th>
                            <th scope="col">Họ Tên</th>
                            <th scope="col">Bút Danh</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phân Quyền</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.nguoidung}}
                        <tr>
                            <th scope="row">{{ID}}</th>
                            <td>{{NguoiDung}}</td>
                            <td>{{HoTen}}</td>
                            <td>{{ButDanh}}</td>
                            <td>{{Email}}</td>
                            <td>{{PhanQuyen}}</td>
                            <td class="text-right">
                                <a name="" id="" class="btn btn-primary btn-xs" href="/account/edit/{{ID}}"
                                    role="button" title="Edit">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>